<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nf_orange_d500"
    android:id="@+id/item_foreground">

  <ImageView
      android:id="@+id/article_img"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginBottom="32dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="2dp"
      android:scaleType="fitXY"
      android:src="@mipmap/af_img"
      android:contentDescription="@null"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      android:id="@+id/article_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:padding="2dp"
      android:textColor="@color/nf_white"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/article_img"
      app:layout_constraintTop_toTopOf="@+id/article_img"/>

  <TextView
      android:id="@+id/article_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:drawableStart="@drawable/date"
      android:padding="2dp"
      android:textColor="@color/nf_white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/article_img"
      app:layout_constraintTop_toBottomOf="@+id/article_title"/>

  <TextView
      android:id="@+id/article_read_more"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:padding="2dp"
      android:text="@string/read_more"
      android:textColor="@color/nf_white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>